<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/colorPrimary"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.halisson.apendendoespanhol.com.aprendendoespanhol.TelaHistorias">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/listjogadores"
        android:gravity="center_vertical"
        android:text="HistÃ³rias"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textColorLink="@color/colorPrimary"
        android:textSize="30dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <View
            android:id="@+id/view"
            android:layout_width="324dp"
            android:layout_height="193dp"
            android:layout_centerInParent="true"
            android:background="@drawable/buttonshape" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignBottom="@+id/view3"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgPatinho"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="0"
                android:src="@drawable/patinhofeio" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgPatinho2"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/imgPatinho2"
                android:layout_weight="1"
                android:text="Patinho Feio"
                android:textColor="@android:color/background_light"
                android:textColorLink="@android:color/background_light"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="192dp"
                tools:layout_editor_absoluteY="105dp" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <View
            android:id="@+id/view3"
            android:layout_width="324dp"
            android:layout_height="210dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttongreen" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignBottom="@+id/view"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgPatinho2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="0"
                android:scaleType="fitXY"
                android:src="@drawable/chocaroovo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgPatinho2"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/imgPatinho2"
                android:layout_weight="1"
                android:text="Patinho Feio"
                android:textColor="@android:color/background_light"
                android:textColorLink="@android:color/background_light"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="192dp"
                tools:layout_editor_absoluteY="105dp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|center_vertical"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnHistoriasVoltar"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical|center"
            android:layout_weight="0"
            android:background="@drawable/buttonred"
            android:text="Voltar" />
    </LinearLayout>


</LinearLayout>
